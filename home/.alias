#
# directories
#
hash -d w=$HOME/WORK
hash -d g=$HOME/WORK/git
hash -d df=$HOME/.homesick/repos/dotfiles

#
# VIM
#
#VIMDIR=/usr/local/Cellar/macvim/7.4-73/bin/
VIMDIR=/Applications/MacVim.app/Contents/MacOS/
#vim_=`which vim`
#VIMDIR=`dirname $vim_`
alias vim='$VIMDIR/Vim'
alias gvim='$VIMDIR/vim -g'
alias gvimdiff='$VIMDIR/vim -g -d'
alias gview='$VIMDIR/vim -g -R'
alias gvimide='VIMIDE=ide $VIMDIR/vim -g'
alias vimdiff='$VIMDIR/vim -d'
alias view='$VIMDIR/vim -R'
alias vimide='VIMIDE=ide $VIMDIR/vim -v'
alias vim_pure='$VIMDIR/vim -v -u ~/.vimrc_empty --cmd "set runtimepath=~/.vim_empty"'

#
# GIT
#
alias gitlog='git log --color --oneline --graph --decorate '
alias gitwhat='git whatchanged --color --graph --decorate '
alias gy='addGitSuperStatusHooks; NO_GITSTATUS='
alias gn='removeGitSuperStatusHooks; NO_GITSTATUS=yes'
alias gnn='removeGitSuperStatusHooks; NO_GITSTATUS=absolutelyNothing'
alias gcam='git commit -a -m '
# oh-my-zsh git plugin adds the below alias which i dont need
unalias gcm
alias gcm='git commit -m '
unalias gl
alias gl=gitlog
unalias gdd 2>/dev/null
alias gdd='gd --color-words'

#
# TMUX
#
alias tmux-rename='tmux set-option allow-rename off && tmux rename-window'

# because typing 'cd' is A LOT of work!!
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

alias h='history'
alias ls='ls -G --color=always'

# ag find
alias af='ag -iug '
alias ff='ag -iug '
alias f='ag -ig '

alias lubuntu='ssh osboxes@192.168.56.2 '
