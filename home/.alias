#
# directories
#
hash -d w=$HOME/WORK
hash -d g=$HOME/WORK/git

#
# VIM
#
#VIMDIR=/usr/local/Cellar/macvim/7.4-73/bin/
vim_=`which gvim`
VIMDIR=`dirname $vim_`
alias gvimide='VIMIDE=ide $VIMDIR/vim -g'
alias vimide='VIMIDE=ide $VIMDIR/vim -v'
alias vim_pure='$VIMDIR/vim -v -u ~/.vimrc_empty --cmd "set runtimepath=~/.vim_empty"'

#
# GIT
#
alias gitlog='git log --color --oneline --graph --decorate '
alias gitwhat='git whatchanged --color --graph --decorate '
alias gy='addGitSuperStatusHooks; NO_GITSTATUS='
alias gn='removeGitSuperStatusHooks; NO_GITSTATUS=yes'
alias gnn='removeGitSuperStatusHooks; NO_GITSTATUS=absolutelyNothing'
alias gcam='git commit -a -m '
# zsh git plugin adds the below alias which i dont need
unalias gcm

#
# TMUX
#
alias tmux-rename='tmux set-option allow-rename off && tmux rename-window'

# because typing 'cd' is A LOT of work!!
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

# ag find
alias af='ag -iug '
alias ff='ag -iug '
alias f='ag -ig '

