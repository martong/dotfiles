#!/bin/bash

# Set up iterm2 with
# pref > advanced > run command > /Users/mg/bin/iterm_vim \1:\2

#echo "$@" >> ~/tmp/iterm_vim.log
VIM=/Applications/MacVim.app/Contents/MacOS/vim
#if [ -z "$VIMSERV" ]; then VIMSERV=vim; fi
VIMSERV=friend
# Change focus as well
#$VIM --servername $VIMSERV --remote "$@"
# Do not change focus
$VIM --servername $VIMSERV --remote-send "<ESC>:e $@<CR>"

